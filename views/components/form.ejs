<form action="/<%= id %>/check-string" method="post" id="answer-form">
    <div>
      <label for="answer" style="display: block">Answer</label>
      <input type="text" name="answer" value="<%= input || ""%>" id="answer" required />
    </div>
      <p class="error-mesg"><%= incorrect && "Incorrect, please try again" %></p>
    <button>Submit</button>
</form>